{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-vcpkg-base",
            "description": "Visual Studio + vcpkg",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
                "X_VCPKG_APPLOCAL_DEPS_INSTALL": "ON"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-vcpkg-debug",
            "displayName": "Debug",
            "inherits": "windows-vcpkg-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_INIT": "/fsanitize=address /permissive-"
            }
        },
        {
            "name": "windows-vcpkg-release",
            "displayName": "RelWithDebInfo",
            "inherits": "windows-vcpkg-base",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
        },
        {
            "name": "linux-vcpkg",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "displayName": "Linux Multi-Config +vcpkg",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-vcpkg-gcc",
            "displayName": "Linux Multi-Config +vcpkg +GCC warnings",
            "inherits": "linux-vcpkg",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -pedantic -Werror=catch-value -Werror=reorder -Werror=sequence-point -Werror=switch -Werror=unused-variable -Wunused-function"
            }
        },
        {
            "name": "linux-vcpkg-clang",
            "displayName": "Linux Multi-Config +vcpkg +clang warnings",
            "inherits": "linux-vcpkg",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -pedantic"
            }
        }
    ]
}
